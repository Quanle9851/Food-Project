        <!-- Start Cart  -->
        <div class="cart-box-main">
            <div class="container">
                <div class="row">              
                    <div class="col-sm-6 col-lg-6 mb-3"> 
                        <%
                            Cart cart = (Cart) session.getAttribute("CART");
                            if (cart != null) {
                                if (cart.getCart().size() > 0) {
                        %>
                        <div class="col-md-12 col-lg-12">
                            <div class="odr-box">
                                <div class="title-left">
                                    <h2 style="color: #138496">CHECKOUT SUCCESSFULLY! THANK FOR YOUR SHOPPING  </h2>
                                </div>
                                <div class="rounded p-2 bg-light">
                                    <%
                                        int count = 1;
                                        double total = 0;
                                        for (VegetableDTO vegetable : cart.getCart().values()) {
                                            total += vegetable.getPrice() * vegetable.getQuantity();
                                    %> 
                                    <div class="media mb-2 border-bottom">
                                        <div class="media-body"> <a href="#"> <%= vegetable.getVegetableName() %> </a>
                                            <div class="small text-muted">Price: <%= vegetable.getPrice() %> <span class="mx-2">|</span> Qty: <%= vegetable.getQuantity()%> <span class="mx-2">|</span> Subtotal: <%= vegetable.getPrice()*vegetable.getQuantity() %></div>
                                        </div>
                                    </div>
                                    <%
                                        }
                                    %>
                                </div>
                            </div>
                        </div>                       
                        <div class="col-md-12 col-lg-12">
                            <div class="order-box">
                                <div class="title-left">
                                    <h3>Your order</h3>
                                </div>
                                <div class="d-flex">
                                    <div class="font-weight-bold">Product</div>
                                    <div class="ml-auto font-weight-bold">Total</div>
                                </div>
                                <hr class="my-1">                               
                                <hr>
                                <div class="d-flex gr-total">
                                    <h5>Grand Total</h5>
                                    <div class="ml-auto h5"> $ <%= total %> </div>
                                </div>
                                <hr> </div>
                        </div>
                                <%
                                }
                            }
                        %>
                        <div class="col-12 d-flex shopping-box"> <a href="MainController?action=RemoveCart" class="ml-auto btn hvr-hover">Continous Shopping</a> </div>
